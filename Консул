version: '3.7'

services:
  vault:
    image: hashicorp/vault:latest
    container_name: vault
    environment:
      - VAULT_DEV_ROOT_TOKEN_ID=myroot
      - VAULT_DEV_LISTEN_ADDRESS=0.0.0.0:8200
    ports:
      - "8200:8200"
    volumes:
      - vault_data:/vault/file
    cap_add:
      - IPC_LOCK
    command: vault server -dev
    restart: unless-stopped

  consul1:
    image: hashicorp/consul:latest
    container_name: consul1
    command: consul agent -dev -node=consul1 -client=0.0.0.0 -ui -server -bind=0.0.0.0
    ports:
      - "8500:8500"
    volumes:
      - consul1_data:/consul/data
    restart: unless-stopped

  consul2:
    image: hashicorp/consul:latest
    container_name: consul2
    command: consul agent -dev -node=consul2 -client=0.0.0.0 -ui -join=consul1        
    ports:
      - "8501:8500"
    volumes:
      - consul2_data:/consul/data
    depends_on:
      - consul1
    restart: unless-stopped

  consul3:
    image: hashicorp/consul:latest
    container_name: consul3
    command: consul agent -dev -node=consul3 -client=0.0.0.0 -ui -join=consul1
    ports:
      - "8502:8500"
    volumes:
      - consul3_data:/consul/data
    depends_on:
      - consul1
    restart: unless-stopped

volumes:
  vault_data:
  consul1_data:
  consul2_data:
  consul3_data:
